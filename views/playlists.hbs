<div class="library">
    <div style="display: block;">
        <!-- Song Library -->
        <ul class="songList">
            <h1 style="text-align: center; margin: left -10px;">{{heading}}</h1>
            <h3>{{description}}</h3>
            <!-- Search Bar -->
            <form >
                <input type="text" placeholder="Search" class="search-bar" name="searchQuery">
                <button class="styled-button">Search</button>
                <button formaction="/playlistForms" formmethod="post" name="choice" value="addForm" class="styled-button">Create Playlist</button>

            </form>
        <form method="post" role="form" action="/showPlaylist">
            <li class="song-list-item">
                <p class="song-list-item-text" style="text-decoration: underline;">Id</p>  
                <p class="song-list-item-text" style="text-decoration: underline;">Name</p>  
                <p class="song-list-item-text" style="text-decoration: underline;">Description</p>  
            </li>
            {{#if addingToPlaylist}}
                {{#each playlists}}
                    <li class="song-list-item">
                        <p class="song-list-item-text" >{{id}}</p>
                        <p class="song-list-item-text" >{{name}}</p>
                        <p class="song-list-item-text" >{{description}}</p>
                        <button class="play-button" type="submit" name="playlistId" value={{id}}>+</button>
                    </li>
                {{/each}}
            {{else if showPlaylist}}
                {{#each songs}}
                    <li class="song-list-item">
                        <p class="song-list-item-text" >{{id}}</p>
                        <p class="song-list-item-text" >{{name}}</p>
                        <p class="song-list-item-text" >{{artist}}</p>
                        <button formaction="/songForms" formmethod="post" name="choice" value="editInPlaylist" class="play-button" type="submit" >Edit</button>
                        <button formaction="/songForms" formmethod="post" name="choice" value="deleteInPlaylist" class="play-button" type="submit">Remove</button>
                    </li>
                {{/each}}
            {{else}}
                {{#each playlists}}
                    <li class="song-list-item">
                        <p class="song-list-item-text" >{{id}}</p>
                        <p class="song-list-item-text" >{{name}}</p>
                        <p class="song-list-item-text" >{{description}}</p>
                        <button class="play-button" type="submit" name="playlistId" value={{id}}>View</button>
                        <button formaction="/playlistForms" formmethod="post" name="choice" value="editForm" class="play-button" type="submit" name="playlistId" value={{id}}>Edit</button>
                        <button formaction="/playlistForms" formmethod="post" name="choice" value="deleteForm" class="play-button" type="submit" name="playlistId" value={{id}}>Remove</button>
                    </li>
                {{/each}}
            {{/if}}
        </form>

        </ul>
        <div class="musicplayer">
            <h2>{{playSong.name}}</h2>
            <h3>{{playSong.artist}}</h3>
            <img class="song-image" src="images/song-image.jpg">
            <div class="slidecontainer">
                <input type="range" min="0" max="3" value="0" disabled="true">
            </div>
            <button class="styled-button" style="background-color: yellowgreen;">
                <img src="images/skip-to-start.png">
            </button>
            <button class="styled-button" style="background-color: yellowgreen;">
                <img src="images/play.png">
            </button>
            <button class="styled-button" style="background-color: yellowgreen;">
                <img src="images/skip-to-end.png">
            </button>
        </div>
    </div>



    </div>
</div>
