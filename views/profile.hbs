
{{#if displayChoices}}
<form action="/profileForms" method="post" role ="form" enctype="application/x-www-form-urlencoded" >
    <ul>
        <li><legend style="font-size: 40px;">What would you like to do?</legend></li>
        <li><button name="choice" type="submit" class="btn btn-primary" value="username" style="border-radius:5px; margin: 1em;">Change Username</button></li>
        <li><button name="choice" type="submit" class="btn btn-primary" value="password" style="border-radius:5px; margin:1em;">Change Password</button></li>
    </ul>
</form>
{{/if}}

{{#if displayUsernameForm}}
    <div class="form" style="margin-left:12%">
        <form action="/user-edit" method="post" role ="form" >
            <legend class="formLegend" style="padding: 20px;"><u style="text-decoration: none;">Edit Username</u></legend>
            <label for="currentName">Current username:</label><br>
            <input type="text" name="currentUsername" id="currentUsername" value={{currentUser.username}}>
            <br>
            <label for="newName">Enter new username:</label><br>
            <input type="text" name="newUsername" id="newUsername">
            <br>
            <label for="password">Enter current password:</label><br>
            <input type="password" name="password" id="password" >
            <br>

            <button type="submit" class="btn btn-primary" style="border-radius:5px;">Submit</button>

        </form>
    </div>
{{/if}}
{{#if displayPasswordForm}}
    <div class="form" style="margin-left:12%">
        <form action="/user-edit" method="post" role ="form" >
            <legend class="formLegend" style="padding: 20px;"><u style="text-decoration: none;">Edit Password</u></legend>
            <label for="currentUsername">Enter current username:</label><br>
            <input type="text" name="currentUsername" id="currentUsername">
            <br>
            <label for="currentName">Enter current password:</label><br>
            <input type="password" name="currentPassword" id="currentPassword">
            <br>
            <label for="newName">Enter new password:</label><br>
            <input type="password" name="newPassword" id="newPassword">
            <br>
            <button type="submit" class="btn btn-primary" style="border-radius: 5px;">Submit</button>

        </form>
    </div>
{{/if}}
